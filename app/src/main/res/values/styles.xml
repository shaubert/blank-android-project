<resources>

    <style name="ListViewMainTheme.Light" parent="@style/BaseListView.Light">
        <item name="android:listSelector">@drawable/selectable_item_background_light</item>
    </style>

    <style name="ListViewMainTheme.Dark" parent="@style/BaseListView.Dark">
        <item name="android:listSelector">@drawable/selectable_item_background_dark</item>
    </style>

    <style name="SpinnerMainTheme.Light" parent="@style/BaseSpinner.Light">
        <item name="android:dropDownSelector">@drawable/selectable_item_background_light</item>
    </style>

    <style name="SpinnerMainTheme.Dark" parent="@style/BaseSpinner.Dark">
        <item name="android:dropDownSelector">@drawable/selectable_item_background_dark</item>
    </style>

    <style name="AdaptersLibraryStyle" parent="DefaultAdaptersLibraryStyle">
        <item name="adaptersLibrary_sectionLayout">@layout/list_section_header_item</item>
    </style>

    <style name="SlidingTabLayoutStyleDark">
        <item name="stl_slidingTabTextAppearance">@style/SlidingTabTextAppearanceDark</item>
        <item name="stl_slidingTabStripColor">@color/tab_strip_color_dark</item>
    </style>

    <style name="SlidingTabLayoutStyleLight">
        <item name="stl_slidingTabTextAppearance">@style/SlidingTabTextAppearanceLight</item>
        <item name="stl_slidingTabStripColor">@color/tab_strip_color_light</item>
    </style>

    <style name="Button" parent="BaseButton.Dark">
        <item name="android:paddingLeft">@dimen/small_padding</item>
        <item name="android:paddingRight">@dimen/small_padding</item>
        <item name="android:paddingTop">@dimen/normal_padding</item>
        <item name="android:paddingBottom">@dimen/normal_padding</item>

        <item name="android:minHeight">42dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>

        <item name="pb_progress_color_1">@color/progress_color_1</item>
        <item name="pb_progress_color_2">@color/progress_color_2</item>
        <item name="pb_progress_color_3">@color/progress_color_3</item>
        <item name="pb_progress_color_4">@color/progress_color_4</item>

        <item name="pb_autoResumeToNormal">true</item>
        <item name="pb_blockClicksWhenLoading">true</item>

        <item name="pb_textProgress">@string/processing</item>
        <item name="pb_textComplete">@string/done</item>
        <item name="pb_textError">@string/error_loading</item>

        <item name="android:fontFamily">@string/mediumTextFontFamily</item>
    </style>

    <style name="Button.Primary">
        <item name="android:textColor">@android:color/white</item>
        <item name="pb_colorPressed">?attr/colorAccentDark</item>
        <item name="pb_colorNormal">?attr/colorAccent</item>
    </style>

    <style name="Button.Primary.Small">
        <item name="android:minHeight">42dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:textColor">?attr/primaryTextSelector</item>
        <item name="pb_colorPressed">?attr/accent_calm_color</item>
        <item name="pb_colorNormal">?attr/accent_calm_bg_color</item>
    </style>

    <style name="Button.Secondary.Small">
        <item name="android:minHeight">36dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MaterialEditText"/>
