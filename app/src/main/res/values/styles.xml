        <item name="met_iconPadding">10dp</item>

        <item name="met_baseColor">?attr/accent_calm_color</item>
        <item name="met_underlineColor">?attr/accent_calm_color</item>
        <item name="met_primaryColor">?attr/colorAccent</item>
        <item name="met_textColorHint">?android:attr/textColorHint</item>
        <item name="met_helperTextColor">?android:attr/textColorHint</item>
        <item name="met_floatingLabelTextColor">?attr/colorAccent</item>
        <item name="met_textColor">?primaryTextSelector</item>
    </style-->

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">?actionBarTheme</item>
        <item name="popupTheme">?actionBarPopupTheme</item>
    </style>

    <style name="AppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">?actionBarTheme</item>
        <item name="android:background">?colorPrimary</item>
    </style>

</resources>
